<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/jobs.css">
    <title>Create New Job</title>
</head>
<body>
    <form action="/jobs/create" method="POST" id="myForm">
        <header><h2>Create New Job</h2></header>

        <div id="message" style="color: green;">{{message}}</div> 
        <div id="error-message" style="color: red;">{{error}}</div> 

        <div class="row">
            <label for="job_id">Job ID:</label>
            <input type="text" id="job_id" name="job_id" required>

            <label for="job_title">Job Title:</label>
            <input type="text" id="job_title" name="job_title" required>

            <label for="min_sal">Min Salary:</label>
            <input type="number" id="min_sal" name="min_sal" required min="0">

            <label for="max_sal">Max Salary:</label>
            <input type="number" id="max_sal" name="max_sal" required min="0">
        </div>

        <div class="button-container">
            <button type="button" onclick="window.location.href = '/'">Home</button>
            <button type="reset" id="cancelBtn">Cancel</button>
            <button type="submit">Create</button>
        </div>
    </form>

    <script>
        const cancelBtn = document.getElementById("cancelBtn");
        const inputFields = document.querySelectorAll("#myForm input"); 

        cancelBtn.addEventListener("click", function() {
            inputFields.forEach(input => {
                input.value = '';
            });
        });
    </script>
</body>
</html>
